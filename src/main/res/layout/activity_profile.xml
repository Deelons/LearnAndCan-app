<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff4"
    tools:context=".ProfileActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="197dp"
        android:orientation="vertical"
        android:background="@drawable/bg_profile1"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="我 的"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:text="设置"
                android:textColor="@android:color/white"
                android:background="#00000000"
                />

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_bg"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView_id"
                android:id="@+id/imageView_gray"/>

            <com.learnandcan.view.CircleImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/pic2"
                android:layout_gravity="center_horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/Circleview"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kotori"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:layout_alignTop="@+id/Circleview"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/Circleview"
                android:layout_toEndOf="@+id/Circleview"
                android:layout_marginLeft="10dp"
                android:id="@+id/textView_id"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/sex_female"
                android:layout_alignTop="@+id/textView_id"
                android:layout_toRightOf="@+id/textView_id"
                android:layout_toEndOf="@+id/textView_id"
                android:layout_marginLeft="5dp"
                android:id="@+id/imageView_sex"/>

            <TextView
                android:id="@+id/textview_focus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:layout_below="@+id/textView_id"
                android:layout_alignLeft="@+id/textView_id"
                android:layout_alignStart="@+id/textView_id"/>

            <TextView
                android:id="@+id/textview_focus_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:layout_alignTop="@+id/imageView_gray"
                android:layout_toRightOf="@+id/textview_focus"
                android:layout_toEndOf="@+id/textview_focus"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:id="@+id/white_line"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:background="@drawable/white_line"
                android:layout_marginLeft="20dp"
                android:layout_alignBottom="@+id/textview_focus_num"
                android:layout_toRightOf="@+id/imageView_sex"
                android:layout_toEndOf="@+id/imageView_sex"/>

            <TextView
                android:id="@+id/textview_fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="粉丝"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="20dp"
                android:layout_alignTop="@+id/imageView_gray"
                android:layout_toRightOf="@+id/white_line"
                android:layout_toEndOf="@+id/white_line"
                />

            <TextView
                android:id="@+id/textview_fans_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="223"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_alignTop="@+id/imageView_gray"
                android:layout_toRightOf="@+id/textview_fans"
                />

            <TextView
                android:id="@+id/autograph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大家好，我是南小鸟"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/textview_focus"
                android:layout_alignStart="@+id/textview_focus"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.08"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/img_lesson_online"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/lesson_online"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上线课程"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView_les_online"
            android:layout_alignTop="@+id/textview_les_collection"
            android:layout_toRightOf="@+id/img_lesson_online"
            android:layout_toEndOf="@+id/img_lesson_online" />

        <TextView
            android:id="@+id/textView_les_online_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(2)"
            android:textSize="15dp"
            android:textColor="#aca8a8"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/textView_les_online"
            android:layout_toRightOf="@+id/textView_les_online"
            android:layout_toEndOf="@+id/textView_les_online" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/lesson_collection"
            android:id="@+id/imageView_les_collection"
            android:layout_alignTop="@+id/img_lesson_online"
            android:layout_toRightOf="@+id/textView_les_online"
            android:layout_toEndOf="@+id/textView_les_online"
            android:layout_marginLeft="80dp"
            android:layout_marginStart="80dp" />

        <TextView
            android:id="@+id/textview_les_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏课程"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView_les_collection"
            android:layout_toEndOf="@+id/imageView_les_collection" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(3)"
            android:textSize="15dp"
            android:textColor="#aca8a8"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/textview_les_collection"
            android:layout_toRightOf="@+id/textview_les_collection"
            android:layout_toEndOf="@+id/textview_les_collection" />

    </RelativeLayout>



</LinearLayout>
