<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#efeff4"
    tools:context="com.example.admin.profile.Details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/details"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center">

            <ImageButton
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:background="@drawable/back"
                android:layout_gravity="left|center"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详情"
                android:textSize="23dp"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                />
        </FrameLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/gray_view"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/bg_gray2"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:text="免费钢琴入门（限周末）"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:background="@drawable/collect"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="10dp"
                    />

            </FrameLayout>

            <com.learnandcan.view.CircleImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/pic"
                android:layout_above="@+id/gray_view"
                android:layout_marginBottom="35dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/CircleView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="maki同学"
                android:textColor="#000000"
                android:layout_marginBottom="20dp"
                android:layout_above="@+id/gray_view"
                android:layout_centerHorizontal="true"
                android:id="@+id/detail_id"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32分钟前"
                android:textColor="#818380"
                android:textSize="15dp"
                android:layout_above="@+id/gray_view"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:text="本人钢琴XXX级,愿意无偿教授钢琴入门，在XXXXXXXX见面，具体时间共同商议。有意愿请联系我，上课地点待定。"
        android:textSize="20dp"
        android:textScaleX="1"
        android:lineSpacingExtra="3dp"
        android:textColor="#000000"
        android:background="#FFFFFF"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="所需交易"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center|left"
        android:background="#FFFFFF"
        android:text="    免费"
        android:textColor="#46e346"
        android:textSize="20dp"

        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论"
            android:textSize="20dp"
            android:textColor="#6bd2f7"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(1)"
            android:textSize="20dp"
            android:textColor="#6bd2f7"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="#FFFFFF">

        <com.learnandcan.view.CircleImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/pic"
            android:id="@+id/Circleview3" />

        <TextView
            android:id="@+id/Textview_id2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="maki同学"
            android:textColor="#000000"
            android:layout_alignTop="@+id/Circleview3"
            android:layout_toRightOf="@+id/Circleview3"
            android:layout_toEndOf="@+id/Circleview3"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="32分钟"
            android:textColor="#727272"
            android:layout_alignTop="@+id/Textview_id2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/Textview_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学到了很多东西呢！十分感谢！"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_below="@+id/Circleview3"
            android:layout_alignLeft="@+id/Circleview3"
            />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:layout_marginLeft="40dp"
            android:background="#FFFFFF"
            android:text="发起消息"
            android:textSize="20dp"
            android:textColor="#0789e4"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:gravity="center|right"
            android:background="#FFFFFF"
            android:text="发起感谢"
            android:textSize="20dp"
            android:textColor="#f79c1a"
            android:layout_marginRight="40dp"
            />
    </FrameLayout>

</LinearLayout>
